<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ZLMClaims.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ZLMClaims"
    xmlns:views="clr-namespace:ZLMClaims.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="logo.svg"
            Route="MainPage"
            ContentTemplate="{DataTemplate local:MainPage}"/>

        <ShellContent 
            Title="Claims"
            Icon="claim.svg"
            Route="AllPhotosPage"
            ContentTemplate="{DataTemplate views:AllClaimsPage}"/>

        <Tab 
            Title="Repair" 
            Icon="search.svg">

            <ShellContent
                Title="Cooperative"
                ContentTemplate="{DataTemplate views:AllRepairCompaniesPage}"/>

            <ShellContent
                Title="Uncooperative"
                ContentTemplate="{DataTemplate views:AllRepairCompaniesPage}"/>
        </Tab>

        <ShellContent 
            Title="Profile"
            Icon="profile.svg"
            ContentTemplate="{DataTemplate views:UserPage}"/>
    </TabBar>

</Shell>
