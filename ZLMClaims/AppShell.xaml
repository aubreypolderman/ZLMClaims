<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ZLMClaims.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ZLMClaims"
    xmlns:views="clr-namespace:ZLMClaims.Views"
    xmlns:lang="clr-namespace:ZLMClaims.Resources.Languages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="{Binding LocalizationResourceManager[TabItemHome], Mode=OneWay}"
            Icon="logo.svg"
            Route="MainPage"
            ContentTemplate="{DataTemplate local:MainPage}"/>

        <ShellContent 
            Title="{Binding LocalizationResourceManager[TabItemClaim], Mode=OneWay}"
            Icon="claim.svg"
            Route="AllPhotosPage"
            ContentTemplate="{DataTemplate views:AllClaimsPage}"/>

        <Tab 
            Title="{Binding LocalizationResourceManager[TabItemRepair], Mode=OneWay}"
            Icon="search.svg">

            <ShellContent
                Title="{Binding LocalizationResourceManager[TabItemRepairCooperative], Mode=OneWay}"
                ContentTemplate="{DataTemplate views:AllRepairCompaniesPage}"/>

            <ShellContent
                Title="{Binding LocalizationResourceManager[TabItemRepairUncooperative], Mode=OneWay}"
                ContentTemplate="{DataTemplate views:AllRepairCompaniesPage}"/>
        </Tab>

        <ShellContent 
            Title="{Binding LocalizationResourceManager[TabItemProfile], Mode=OneWay}"
            Icon="profile.svg"
            ContentTemplate="{DataTemplate views:UserPage}"/>
    </TabBar>

</Shell>
