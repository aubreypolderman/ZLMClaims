<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ZLMClaims.ViewModels"
             xmlns:models="clr-namespace:ZLMClaims.Models"
             x:Class="ZLMClaims.Views.AllClaimsPage"
             Title="All claims"
             x:DataType="viewmodels:AllClaimsViewModel">
    <ContentPage.BindingContext>
        <viewmodels:AllClaimsViewModel />
    </ContentPage.BindingContext>

    <!-- Add an + icon to the toolbar -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding NewClaimCommand}" IconImageSource="{FontImage Glyph='+', Color=White, Size=22}" />
    </ContentPage.ToolbarItems>

    <!-- Display claims in a list -->
    <CollectionView x:Name="claimsCollection"
                    ItemsSource="{Binding Claims}"
                    Margin="20"
                    SelectionMode="Single">
        <!-- Designate how the collection of items are laid out -->
        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
        </CollectionView.ItemsLayout>

        <!-- Define the appearance of each item in the list -->
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:Claim">
                <SwipeView>
                    <Frame BorderColor="Red" 
                           CornerRadius="10"
                           Padding="15">

                        <StackLayout Orientation="Horizontal">
                            
                            <Image 
                           Source="personenauto2.png"
                           Aspect="AspectFill"
                           WidthRequest="50" 
                           HeightRequest="50"/>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Claim id: " />
                                        <Span Text="{Binding Id}" />
                                        <Span Text=" / 005"
                                              FontSize="22"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label Text="{Binding AlbumId}" FontSize="14" TextColor="Silver"/>
                            <Label Text="{Binding Title}" FontSize="14" TextColor="Silver"/>
                            <Label Text="{Binding Url}" FontSize="14" TextColor="Silver"/>
                        </StackLayout>
                    </Frame>
                </SwipeView>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>