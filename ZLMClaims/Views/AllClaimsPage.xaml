<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ZLMClaims.ViewModels"
             xmlns:models="clr-namespace:ZLMClaims.Models"
             x:Class="ZLMClaims.Views.AllClaimsPage"
             xmlns:local="clr-namespace:ZLMClaims"
             Title="{local:Translate AllClaimsTitle}"
             x:DataType="viewmodels:AllClaimsViewModel">
    <ContentPage.BindingContext>
        <viewmodels:AllClaimsViewModel />
    </ContentPage.BindingContext>

    <!-- Add an + icon to the toolbar -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding NewClaimCommand}" IconImageSource="{FontImage Glyph='+', Color=White, Size=22}" />
    </ContentPage.ToolbarItems>

    <!-- Display claims in a list -->
    <CollectionView x:Name="claimsCollection"
                    ItemsSource="{Binding Claims}"
                    Margin="20"
                    SelectionMode="Single">
        <!-- Designate how the collection of items are laid out -->
        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
        </CollectionView.ItemsLayout>

        <!-- Define the appearance of each item in the list -->
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:Claim">
                <SwipeView>
                    <Frame BorderColor="{StaticResource Primary}" 
                           CornerRadius="10"
                           Padding="15">

                        <StackLayout Orientation="Horizontal">

                            <Image Source="{Binding Image2}"
                                   Aspect="AspectFill"
                                   WidthRequest="70" 
                                   HeightRequest="70">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding Path=BindingContext.TapCommand, Source = {x:Reference claimssCollection}}" CommandParameter="{Binding}" />
                                </Image.GestureRecognizers>
                            </Image>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="      " />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <StackLayout Orientation="Vertical">
                                <Label Text="{Binding CauseOfDamage}" FontSize="16" FontAttributes="Bold"/>
                                <Label>
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding Id}" />
                                            <Span Text=" policy number: " />
                                            <Span Text="{Binding ContractId}" />
                                            <Span Text=" " />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label>
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding ClaimDateTime}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label></Label>
                                <Label FontSize="10" TextColor="Silver">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Schadedatum: " />
                                            <Span Text="2023-01-01 18:45" />
                                            <Span Text=" km" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </SwipeView>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>